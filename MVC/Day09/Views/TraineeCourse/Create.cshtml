                @*<label asp-for="TraineeID" class="control-label"></label>*@
                <label class="control-label">Trainee</label>
                <select asp-for="TraineeID" class ="form-control" asp-items="ViewBag.TraineeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" asp-items="@Html.GetEnumSelectList<Grade>()" class="form-control"></select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

