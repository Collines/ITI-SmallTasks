@model HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body class="text-center">
    <hgroup class="p-5">
        <h1 class="text-danger fw-bold">Admin Error Page.</h1>
        <h2>An error occurred while processing your request.</h2>
        <p><span class="fw-bold">@Model.Exception.Message</span> from Controller: <span class="text-danger fw-bold">@Model.ControllerName</span> @@Action: <span class="text-danger fw-bold">@Model.ActionName</span></p>
    </hgroup>
</body>
</html>
